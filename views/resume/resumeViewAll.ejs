<%- include("../includes/header.ejs", {title:">Resumes"}); %>
<h1>Resumes</h1>
<a href="/resume/add">Add New Resume</a> <br />

<br />


<table border="1">
    <tr><th>First and Last Name</th><th>Resume name</th><th>Action</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/resume/?resume_id=<%= result[i].resume_id %>"><%= result[i].first_name %> <%= result[i].last_name %></a></td>
        <td><%= result[i].resume_name %></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/resume/edit/?resume_id=<%= result[i].resume_id %>'">Edit</button>
            <form action="/resume/delete/" style="display:inline;">
                <input type="hidden" name="resume_id" id="resume_id" value="<%= result[i].resume_id %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>
<a href="/"><< back</a>
